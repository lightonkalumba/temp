{
  "manifest_version": 3,
  "name": "Absa Email Scam Detector",
  "version": "1.0",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": [
    "https://mail.google.com/*",
    "https://outlook.office.com/*",
    "https://outlook.live.com/*",
    "http://localhost:5000/*"
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
